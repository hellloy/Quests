                    </span>
                    <span  class="text-danger font-weight-bold font-size-h6 mt-2">Время прохождения</span>
                </div>
            </div>
            <!--end::Row-->
            
        </div>
        <!--end::Stats-->
        <div class="row">
            <div class="col">
                <blockquote class="blockquote">
                    <p class="mr-8 ml-8">@((MarkupString)_quest.Description)</p>
                </blockquote>
            </div>
        </div>
        
        <div class="resize-triggers">
            <div class="expand-trigger">
                <div style="width: 308px; height: 491px;"></div></div>
            <div class="contract-trigger"></div></div>
