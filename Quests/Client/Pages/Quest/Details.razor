@code {
    [Parameter]
    public int Id { get; set; }
    private Quest _quest = new Quest();

    protected override async Task OnInitializedAsync()
    {
        if (Id != 0)
        {
            _quest = await QuestDataService.Get(Id);

            StateHasChanged();


        }
    }
}
