@page
@model ForgotPasswordModel




<div class="login-container order-2 order-lg-1 d-flex flex-center flex-row-fluid px-7 pt-lg-0 pb-lg-0 pt-4 pb-6 bg-white">
    <!--begin::Wrapper-->
    <div class="login-content d-flex flex-column pt-lg-0 pt-12">
       
        <!--begin::Signin-->
        <div class="login-form">
           
            <form method="post" class="form fv-plugins-bootstrap fv-plugins-framework">
                <!--begin::Title-->
                <div class="pb-5 pb-lg-15">
                    <h3 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">Забыли пароль ?</h3>
                    <p class="text-muted font-weight-bold font-size-h4">Введите свой email для сброса пароля</p>
                </div>
                <!--end::Title-->
                <div asp-validation-summary="All" class="text-danger"></div>
                <!--begin::Form group-->
                <div class="form-group fv-plugins-icon-container">
                    <input asp-for="Input.Email" class="form-control form-control-solid h-auto py-7 px-6 border-0 rounded-lg font-size-h6" placeholder="Email">
                </div>
                <div class="form-group d-flex flex-wrap">
                    <button type="submit"  class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-4">Отправить</button>
                    <a asp-page="./Login"  class="btn btn-light-primary font-weight-bolder font-size-h6 px-8 py-4 my-3">Отмена</a>
                </div>
            </form>
        </div>
        <!--end::Signin-->
    </div>
    <!--end::Wrapper-->
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
